{
  "name": "@curol/button",
  "description": "React button component.",
  "version": "0.0.3",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/curol/ui.git",
    "directory": "packages/components/button"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "clean": "rm -rf .turbo node_modules dist build .cache",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "release": "pnpm build && pnpm publish"
  },
  "devDependencies": {
    "@curol/eslint-config-ui": "workspace:*",
    "@curol/tsconfig": "workspace:*",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "eslint": "^8.15.0",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0"
  },
  "dependencies": {
    "@curol/icons": "workspace:*",
    "@curol/utils": "workspace:*",
    "class-variance-authority": "^0.4.0"
  }
}
